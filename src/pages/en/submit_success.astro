---
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<script>
  const LS_SELECTED_LOCALE = "selectedLocale";

  const l = localStorage.getItem(LS_SELECTED_LOCALE);

  if (l === "pt") {
    document.querySelector(".dz-title").innerText = "Obrigada";
    document.querySelector("#thank-you-msg").innerText =
      "Obrigado, sua mensagem foi recebida!";
  } else {
    document.querySelector(".dz-title").innerText = "Thank You";
    document.querySelector("#thank-you-msg").innerText =
      "Thanks, your message has been received!";
  }
</script>

<Layout title="">
  <main>
    <div class="dz-main-container">
      <p class="alert" id="thank-you-msg"></p>
    </div>
  </main>
</Layout>

<style>
  h1 {
    margin: 2rem 0;
  }

  main {
    display: flex;
    flex-flow: nowrap;
  }

  img {
    width: 180px;
    height: 180px;
  }

  .text {
    margin-block-start: 0;
    margin-block-end: 0;
  }
</style>
