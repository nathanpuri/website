---
import Title from "../../components/Title.astro";
import Layout from "../../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout title={t("thankYou")}>
  <Title title={t("thankYou")} />
  <main>
    <div class="dz-main-container">
      <p class="alert">{t("yourMessageReceived")}</p>
    </div>
  </main>
</Layout>

<style>
  h1 {
    margin: 2rem 0;
  }

  main {
    display: flex;
    flex-flow: nowrap;
  }

  img {
    width: 180px;
    height: 180px;
  }

  .text {
    margin-block-start: 0;
    margin-block-end: 0;
  }
</style>
