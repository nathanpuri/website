---
import Nav from '../components/Nav.astro';
import Title from '../components/Title.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You | Guru Natan">
    <Nav current={5} />
    <Title title="Thank You"></Title>
    <main>
        <div class="dz-main-container">
            <p class="alert">Thanks, your message has been received!</p>
        </div>
    </main>
</Layout>

<style>
    h1 {
        margin: 2rem 0;
    }

    main {
        display: flex;
        flex-flow: nowrap;
    }

    img {
        width: 180px;
        height: 180px;
    }

    .text {
        margin-block-start: 0;
        margin-block-end: 0;
    }
</style>