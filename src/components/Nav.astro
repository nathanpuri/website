---
import { localizePath } from "astro-i18next";

let netlifyPages = []
try {
    netlifyPages = await Astro.glob('../pages/*.md');
} catch (err) {
    console.error('Unable to retrieve Netlify CMS pages:', err);
}

const navItems = netlifyPages.map(page => {
    return {
        label: page.frontmatter.title,
        href: localizePath(`/${page.frontmatter.slug}`)
    }
});

navItems.push({ label: "Contact", href: localizePath("/contact") })
---

<nav class="dz-nav">
    <div class="dz-banner">
        <h1>Guru Natan</h1>
        <img class="dz-banner-img" src="/symbol.png" alt="Hum symbol" />
    </div>
    <div class="dz-nav__menu-toggle">
        <label for="hamburger-menu">Menu Btn</label>
        <input type="checkbox" id="hamburger-menu" aria-label="hamburger menu"
            aria-describedby="button used to open and close the mobile navigation menu" />
        <span></span>
        <span></span>
        <span></span>
        <ul class="dz-nav__list">
            {navItems.map((item) => <li><a href={item.href}>{item.label}</a></li>)}
        </ul>
    </div>
    <script>
        const navItems = document.querySelectorAll('.dz-nav__list a')
        const currentPageNavLink = Array.from(navItems).find(item => {
            const normalize = path => path[path.length - 1] === '/' ? path : `${path}/`
            let currPath = normalize(window.location.pathname)
            let href = normalize(item.getAttribute('href'))
            return href === currPath
        })
        if (currentPageNavLink) {
            currentPageNavLink.classList.add('highlight')
        }
    </script>
</nav>

<style>
    @media screen and (min-width: 672px) {
        .dz-nav {
            display: flex;
            flex-direction: row;
            justify-content: center;
            color: black;
            text-decoration: none;
            font-size: var(--font-size-sm);
            font-weight: bold
        }

        .dz-banner {
            display: none;
        }
    }

    .dz-nav__image {
        display: none;
    }

    .dz-nav__menu-toggle label[for="hamburger-menu"] {
        display: none;
    }

    .dz-nav__menu-toggle span,
    .dz-nav__menu-toggle input {
        display: none;
    }

    .dz-nav__list {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
    }

    ul {
        padding: 0;
        margin: 0;
    }

    li {
        list-style-type: none;
        position: relative;
    }

    li:not(:first-child)::before {
        content: '|';
        margin: 0 5px;
        color: var(--color-primary-red);
    }

    a {
        color: #000000;
        text-decoration: none;
        font-size: var(--font-size-sm);
        font-weight: bold
    }

    a.highlight {
        color: var(--color-primary-red);
        text-decoration: none;
        font-size: var(--font-size-m);
        font-weight: bold
    }

    @media screen and (max-width: 672px) {
        .dz-nav {
            position: relative;
            height: calc(100vw * 0.2445);
        }

        .dz-nav__menu-toggle {
            display: flex;
            flex-direction: column;
            position: relative;
            top: 25px;
            margin-left: 16px;
            z-index: 1;
            -webkit-user-select: none;
            user-select: none;
        }

        .dz-nav__menu-toggle input {
            display: flex;
            width: 40px;
            height: 32px;
            position: absolute;
            cursor: pointer;
            opacity: 0;
            z-index: 2;
            top: -50%;
            left: -9px;
        }

        .dz-nav__menu-toggle span {
            display: flex;
            width: 29px;
            height: 2px;
            margin-bottom: 5px;
            position: relative;
            background: black;
            border-radius: 3px;
            z-index: 1;
            transform-origin: 5px 0px;
            transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0),
                background 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0),
                opacity 0.55s ease;
        }

        .dz-nav__menu-toggle span:first-child {
            transform-origin: 0% 0%;
        }

        .dz-nav__menu-toggle span:nth-last-child(2) {
            transform-origin: 0% 100%;
        }

        .dz-nav__menu-toggle input:checked~span {
            opacity: 1;
            transform: rotate(45deg) translate(-3px, -1px);
            background: black;
        }

        .dz-nav__menu-toggle input:checked~span:nth-last-child(3) {
            opacity: 0;
            transform: rotate(0deg) scale(0.2, 0.2);
        }

        .dz-nav__menu-toggle input:checked~span:nth-last-child(2) {
            transform: rotate(-45deg) translate(0, -1px);
        }

        .dz-nav__list {
            position: absolute;
            display: flex;
            justify-content: flex-start;
            top: 0;
            left: calc(-80vw - 36px);
            flex-flow: column nowrap;
            width: 80vw;
            height: 100vh;
            box-shadow: 0 0 10px #85888C;
            margin: -25px 0 0 -16px;
            padding: 15vh 24px 24px 0;
            background-color: white;
            -webkit-font-smoothing: antialiased;
            transform-origin: 0% 0%;
            transform: translate(0%, 0);
            transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0);
        }

        .dz-nav__list li {
            padding: 10px 0;
            transition-delay: 2s;
            margin-left: 16px;
        }

        .dz-nav__menu-toggle input:checked~ul {
            transform-origin: 0% 0%;
            transform: translate(calc(80vw + 36px), 0);
            transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0);
        }

        a,
        a.highlight {
            font-size: var(--font-size-xl);
        }

        li:not(:first-child)::before {
            content: '';
            margin: 0;
        }
    }
</style>